@model Spark.DataModel.Models.CarServiceType
@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        background-color: black;
        background-image: url("data:image/jpeg;base64,");
        background-size: 1500px;
        background-repeat: no-repeat;
    }

    label {
        font-weight: bold;
    }
</style>
<br />
<br />

<form method="post" class="form-horizontal" asp-action="Create">
    <div class="jumbotron backgroundWhite">
        <br />
        <h2 style="font-family:'Times New Roman'"><i class="fas fa-wrench"></i> &nbsp;Service Type Add</h2>

        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name">Service Name</label>
            </div>
            <div class="col-3">
                <input asp-for="Name" class="form-control" placeholder="eg: Fuel-tier" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Price">Price</label>
            </div>
            <div class="col-3">
                <input asp-for="Price" class="form-control" placeholder="eg: $20" />
                <span asp-validation-for="Price" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-4">
                        <input type="submit" class="btn btn-success" value="Save" />
                    </div>
                    <div class="col-4">
                        <a class="btn btn-danger" asp-action="GetServiceType" asp-controller="ServiceTypes">Cancle</a>

                    </div>
                </div>

            </div>
        </div>
       
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
