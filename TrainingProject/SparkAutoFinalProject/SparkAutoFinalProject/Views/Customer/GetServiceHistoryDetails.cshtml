@model SparkAutoFinalProject.ViewModels.CarServiceViewModel
@{
    ViewData["Title"] = "GetServiceHistoryDetails";
}

@{ 
    double Total = 0.0;
}
<style>
    body {
        background-color: black;
        background-image: url("data:image/jpeg;base64,");
        background-size: 1500px;
        background-repeat: no-repeat;
    }

    label {
        font-weight: bold;
    }
</style>
<br />
@if (User.Identity.Name == "amisha@gmail.com")
{
    <a class="btn btn-info" href="../GetCustomerById/@Model.ApplicationUsers.Email" style="float:right;color:black;text-decoration:none;">
        <i class="fa fa-backward"></i> &nbsp; Back To list
    </a>
}
else
{
    <a class="btn btn-info" href="/User/CustomerPage/@Model.ApplicationUsers.Email" style="float:right;color:black;text-decoration:none;">
        <i class="fa fa-backward"></i> &nbsp; Back To list
    </a>
}
<div class="jumbotron">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12">
                    <i class="fa fa-user"></i>
                    <div class="">
                        <label>@Model.ApplicationUsers.Name <br /> @Model.ApplicationUsers.Email / @Model.ApplicationUsers.PhoneNumber </label>


                        <div style="float:right;">

                            @foreach (var item in Model.ServiceHistory)
                            {
                                <label>@item.Car.CarColor <br /> @item.Car.Model / @item.Car.Miles </label>
                            }

                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body col-md-12 row">

                
                    <div class="col-md-6">
                        <table class="table table-striped border">
                            <tr class="table-secondary">
                                <th>Service Name</th>
                                <th>Service Price</th>
                                
                                @*@foreach(var item in Model.ServiceDetails)
                                {
                                    <td>@item.ServiceName</td>
                                    <td>@item.ServicePrice</td>
                                }*@
                                @foreach (var item in Model.Cart)
                                {

                                <tr>
                                    <td>@item.ServiceType.Name</td>
                                    <td>@item.ServiceType.Price</td>

                                </tr>
                                
                            }
                            <tr class="text-success" style="font-weight:bold;">
                                <td>$TotalPrice</td>
                                  @foreach (var item in Model.Cart)
                                    {
                                      Total += @item.ServiceType.Price;
                                     }
                                <td>@Total</td>
                            </tr>
                            </table>
                        </div>

                    <div class="col-md-6" style="float:right;">

                        @foreach (var item in Model.ServiceHistory)
                        {
                            <div class="row">
                                <div class="col-sm-2">
                                    <label asp-for="@item.Miles"></label>
                                </div>
                                <div class="col-sm-8" style="padding-bottom:5px;">
                                    <input asp-for="@item.Miles" disabled class="form-control" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <label asp-for="@item.Details"></label>
                                </div>
                                <div class="col-sm-8" style="padding-bottom:5px;">
                                    <textarea asp-for="@item.Details" rows="4" disabled class="form-control" >@item.Details</textarea>
                                </div>
                            </div>

                        }

                        

                    </div>


                    @*}*@

            </div>
        </div>
    </div>
</div>