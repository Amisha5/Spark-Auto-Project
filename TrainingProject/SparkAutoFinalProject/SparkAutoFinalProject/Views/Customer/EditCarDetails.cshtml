@model Spark.DataModel.Models.Car
@{
    ViewData["Title"] = "EditCarDetails";
}


<style>
    body {
        background-color: black;
        background-image: url("data:image/jpeg;base64,");
        background-size: 1500px;
        background-repeat: no-repeat;
    }

    label {
        font-weight: bold;
    }
</style>
<br />
<form method="post" asp-action="EditCarDetails">
    <div class="jumbotron">
        <h2 style="font-family:'Times New Roman';"><i class="fa fa-car"></i>&nbsp;Edit Car Details</h2>
        <br />
        <input type="hidden" asp-for="CarId" />
        <input type="hidden" asp-for="ApplicationUserId" />
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="VIN" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="VIN" readonly class="form-control" />
            </div>
            <span asp-validation-for="VIN" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Make" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Make" class="form-control" />
            </div>
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Model" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Model" class="form-control" />
            </div>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Style" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Style" class="form-control" />
            </div>
            <span asp-validation-for="Style" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="YearCount" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="YearCount" class="form-control" />
            </div>
            <span asp-validation-for="YearCount" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Miles" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Miles" class="form-control" />
            </div>
            <span asp-validation-for="Miles" class="text-danger"></span>
        </div>
        <div class="form-group row ">

            <div class="col-2">
                <label asp-for="CarColor">Color</label>
            </div>
            <div class="col-2">

                <select asp-for="CarColor" class="form-control" asp-items="Html.GetEnumSelectList(typeof(Spark.DataModel.Models.CarColor))"></select>
                <span asp-validation-for="CarColor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-4">
                        <input type="submit" class="btn btn-info form-control" value="Edit" />
                    </div>
                    <div class="col-4">
                        
                        @if (User.Identity.Name == "amisha@gmail.com")
                        {
                           <a href="../GetCustomerById/@Model.ApplicationUserId" class="btn btn-danger form-control">Cancle</a>
                            
                        }
                        else
                        {
                            <a asp-route-Id="@User.Identity.Name" asp-action="CustomerPage" asp-controller="User" class="btn btn-danger form-control" style="float:right;text-decoration:none;">Back</a>

                        }

                    </div>
                </div>

            </div>
        </div>
    </div>
</form>