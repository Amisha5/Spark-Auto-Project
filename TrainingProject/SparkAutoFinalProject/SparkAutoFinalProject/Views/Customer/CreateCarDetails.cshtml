@model Spark.DataModel.Models.Car
@{
    ViewData["Title"] = "CreateCarDetails";
}

<style>
    body {
        background-color: black;
        background-image: url("data:image/jpeg;base64,");
        background-size: 1500px;
        background-repeat: no-repeat;
    }

    label {
        font-weight: bold;
    }
</style>

<form method="post" asp-action="CreateCarDetails">
    <div class="jumbotron backgroundWhite">
       
        <h2 style="font-family:'Times New Roman';"><i class="fa fa-car"></i>&nbsp;Add New Car </h2>
        <br />
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ApplicationUserId">User ID</label>
            </div>
            <div class="col-5">

                <input asp-for="ApplicationUserId" class="form-control" value="@ViewBag.Id" />
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">

                @*<input asp-for="CarId" hidden value="@Model.CarId" class="form-control" />*@
                <label asp-for="VIN">VIN</label>
            </div>
            <div class="col-5">
                <input asp-for="VIN" class="form-control" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Make">Make</label>
            </div>
            <div class="col-5">
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Model">Model</label>
            </div>
            <div class="col-5">
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Style">Style</label>
            </div>
            <div class="col-5">
                <input asp-for="Style" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="YearCount">YearCount</label>
            </div>
            <div class="col-5">
                <input asp-for="YearCount" class="form-control" />
                <span asp-validation-for="YearCount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Miles">Miles</label>
            </div>
            <div class="col-5">
                <input asp-for="Miles" class="form-control" />
                <span asp-validation-for="Miles" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CarColor">Color</label>
            </div>
            <div class="col-2">

                <select asp-for="CarColor" class="form-control" asp-items="Html.GetEnumSelectList(typeof(Spark.DataModel.Models.CarColor))"></select>
                <span asp-validation-for="CarColor" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Save" />

            </div>
            <div class="col-2">
                @if (User.Identity.Name == "amisha@gmail.com")
                {
                    <a asp-route-Id="@ViewBag.Id" asp-action="GetCustomerById" asp-controller="Customer" class="btn btn-danger form-control" style="float:right;text-decoration:none;">Back</a>

                }
                else
                {
                    <a asp-route-Id="@User.Identity.Name" asp-action="CustomerPage" asp-controller="User" class="btn btn-danger form-control" style="float:right;text-decoration:none;">Back</a>

                }
            </div>
        </div>
    </div>
    </form>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
