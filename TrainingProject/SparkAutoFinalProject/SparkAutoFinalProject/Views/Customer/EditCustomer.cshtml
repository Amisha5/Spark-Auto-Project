@model SparkAutoFinalProject.Models.ApplicationUser
@{
    ViewData["Title"] = "EditCustomer";
}

<style>
    body {
        background-color: black;
        background-image: url("data:image/jpeg;base64,");
        background-size: 1500px;
        background-repeat: no-repeat;
    }

    label {
        font-weight: bold;
    }
    .design {
        width: 300px;
        height: 7vh;
    }
</style>
<br />
<br />

<form  asp-action="EditCustomer" method="post">
    <div class="jumbotron backgroundWhite">
        <br />
        <h2 style="font-family:'Times New Roman'"><i class="fa fa-user"></i>&nbsp;Edit Customer</h2>
        <br />

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name">Customer Name:</label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email">Email:</label>
            </div>
            <div class="col-4">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNumber">Phone Number:</label>
            </div>
            <div class="col-4">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address">Address</label>
            </div>
            <div class="col-4">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="City">City</label>

            </div>
            <div class="col-4">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PostalCode">PostalCode</label>
            </div>
            <div class="col-4">
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Role">IsAdmin</label>
            </div>
            <div class="col-4">

                @*<input asp-for="PostalCode" class="form-control" />*@
                <input type="checkbox" asp-for="Role" value="Admin" class="design">
                @*<span asp-validation-for="PostalCode" class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-4">
                        <input type="submit" class="btn btn-success" value="Edit" />
                    </div>
                    <div class="col-4">
                        <a class="btn btn-danger" asp-action="GetCustomerDetails" asp-controller="Customer">Cancle</a>

                    </div>
                </div>

            </div>
        </div>
       
    </div>
</form>